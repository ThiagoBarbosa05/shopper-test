generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  WATER
  GAS
}

model Measure {
  id           String   @id @default(uuid())
  customerCode String   @map("customer_code")
  datetime     DateTime @map("datetime")
  type         Type
  value        Int
  isConfirmed  Boolean  @map("is_confirmed")

  @@unique([customerCode])
  @@map("measures")
}
